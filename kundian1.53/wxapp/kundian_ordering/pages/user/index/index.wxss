page {
    background: #f4f4f4;
    font-size: 28rpx;
}

.user-top {
    width: 100%;
    height: 400rpx;
}

.user-top .back-img {
    width: 100%;
    height: 100%;
    position: relative;
}

.user-top .u-top-head {
    width: 90%;
    margin-left: 3%;
    height: 100rpx;
    line-height: 100rpx;
    position: absolute;
    top: 150rpx;
    color: white;
    z-index: 99;
}

.user-top .u-top-head text {
    position: relative;
    top: -40rpx;
    margin-left: 20rpx;
}

.user-top .u-top-head image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.u-top-mask {
    width: 100%;
    height: 100rpx;
    background: black;
    background: rgba(0,0,0,0.4);
    color: white;
}

.u-top-mask .mask-left {
    width: 50%;
    height: 100%;
    float: left;
}

.mask-left image {
    width: 50rpx;
    height: 35rpx;
    position: relative;
    top: 38rpx;
    margin-left: 20rpx;
}

.mask-left text {
    position: relative;
    top: 30rpx;
    margin-right: 10rpx;
    margin-left: 20rpx;
}

.u-top-mask .mask-right {
    width: 49%;
    height: 100%;
    float: left;
}

.mask-right image {
    float: right;
    width: 20rpx;
    height: 20rpx;
    position: relative;
    top: 43rpx;
    margin-right: 20rpx;
}

.mask-right text {
    float: right;
    position: relative;
    top: 30rpx;
    margin-right: 10rpx;
}

.user-con {
    width: 100%;
    height: auto;
    background: white;
    padding-bottom: 20rpx;
}

.u-list {
    width: 96%;
    height: 100rpx;
    line-height: 100rpx;
    margin-left: 2%;
    border-bottom: 1rpx solid #f4f4f4;
}

.u-list .icon {
    width: 50rpx;
    height: 50rpx;
    position: relative;
    top: 15rpx;
    margin-right: 30rpx;
}

.u-list .icon-order {
    width: 40rpx;
}

.u-list .icon-quan {
    width: 55rpx;
}

.u-list .jiantou {
    width: 30rpx;
    height: 30rpx;
    float: right;
    position: relative;
    top: 35rpx;
}

.getuser {
    width: 250rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    padding: 0 10rpx 0 10rpx;
    position: relative;
    top: -110rpx;
    left: -100rpx;
}

.userBg {
    width: 100%;
    height: 400rpx;
    position: relative;
    background-size: contain;
    box-shadow: 1rpx 1rpx 4rpx rgba(254,239,217,0.8);
}

.userHead {
    position: absolute;
    width: 100%;
    top: 60rpx;
    color: #fff;
    left: 0;
    z-index: 9999;
    text-align: center;
}

.userHeadImg {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    overflow: hidden;
    display: inline-block;
}

.userHeadImg image {
    width: 100%;
    height: 100%;
}

.water {
    bottom: 0;
    height: 0;
    width: 100%;
    opacity: 1;
    position: absolute;
    z-index: 99;
}

.water_show {
    height: 35%;
    transition: 3s;
    transform: translateZ(0);
}

.water-1,.water-2,.water-3 {
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
}

.water-1 {
    height: 100%;
    opacity: 0.3;
    background-size: 100%;
    animation: wave-animation-1 3.5s infinite linear;
}

.water-2 {
    height: 70%;
    opacity: 0.6;
    background-size: 100%;
    animation: wave-animation-2 6s infinite ease-in-out;
}

.water-3 {
    height: 50%;
    background-size: 100%;
    animation: wave-animation-3 9.5s infinite linear;
}

@keyframes wave-animation-1 {
    0% {
        background-position: 0 top;
    }

    100% {
        background-position: 600px top;
    }
}

@keyframes wave-animation-2 {
    0% {
        background-position: 0 top;
    }

    100% {
        background-position: 600px top;
    }
}

@keyframes wave-animation-3 {
    0% {
        background-position: 0 top;
    }

    100% {
        background-position: 600px top;
    }
}

.updateUser {
    font-size: 30rpx;
    text-align: center;
    height: 48rpx;
    line-height: 58rpx;
    background: white;
    padding: 0;
    position: relative;
    background: none;
}

button::after {
    border: none;
}