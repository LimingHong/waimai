page {
    background: #f4f4f4;
    font-size: 30rpx;
}

.pay-top {
    width: 100%;
    height: 250rpx;
    text-align: center;
}

.pay-top image {
    width: 100rpx;
    height: 100rpx;
    margin-top: 40rpx;
    border-radius: 50%;
}

.pay-top text {
    display: block;
}

.pay-input {
    width: 96%;
    height: 140rpx;
    background: white;
    margin-left: 2%;
    border-radius: 10rpx;
    padding-top: 40rpx;
}

.pay-input input {
    width: 90%;
    margin-left: 4%;
    border-radius: 10rpx;
    padding-left: 2%;
    height: 100rpx;
    background: #f4f4f4;
}

.btn {
    width: 100%;
    height: 100rpx;
    text-align: center;
    margin-top: 80rpx;
}

.btn button {
    width: 80%;
    height: 80rpx;
    background: black;
    color: white;
    line-height: 80rpx;
}