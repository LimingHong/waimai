@import "../../../../__wuBaseWxss__/1.wxss";

page {
    background: white;
}

.dinner_Number {
    width: 90%;
    height: 80rpx;
    margin: 30rpx auto 0;
    text-align: center;
    font-size: 36rpx;
    font-weight: bold;
    line-height: 80rpx;
}

.orderDetail {
    width: 94%;
    margin: 10rpx auto;
    background-image: url(https://gitee.com/F1eyadu/weixin-Images/raw/master/orderDateilBg.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
    overflow: hidden;
    padding: 30rpx 0rpx;
    box-sizing: border-box;
    transition: all 0.3s;
}

.order_container {
    width: 100%;
    height: 100%;
}

.containers {
    width: 100%;
    padding: 0rpx 30rpx;
    box-sizing: border-box;
}

.orderState {
    font-size: 36rpx;
    text-align: center;
    color: #5f5f5f;
    font-weight: bold;
    margin-top: 20rpx;
}

.projectNum {
    font-size: 36rpx;
    font-weight: bold;
}

.addBorderBottom {
    border-bottom: 1rpx solid #e3e3e3;
}

.block100 {
    height: 100rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    font-size: 30rpx;
    letter-spacing: 5rpx;
}

.footer view {
    width: 50%;
    height: 100rpx;
}

.bgffd050 {
    background-color: #ffd050;
}

.bgffe7a7 {
    background-color: #ffe7a7;
}

.WaiterAvator {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.avatorImg {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.w110 {
    width: 200rpx;
}

.w100 {
    width: 100rpx;
    text-align: right;
}

.w250 {
    width: 250rpx;
    text-align: right;
}

.transUp {
    transition: all 0.3s;
    transform: rotate(0deg);
}

.translDown {
    transition: all 0.3s;
    transform: rotate(180deg);
}

.transform {
    transition: all 0.3s;
    overflow: hidden;
}

.p-c-style {
    margin-right: 5rpx;
}

.nickname {
    height: 50rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

