@import "../../../../__wuBaseWxss__/1.wxss";

@import "../../../../__wuBaseWxss__/0.wxss";

page {
    background: white;
}

.saleContainer {
    width: 100%;
    height: 200rpx;
    position: relative;
    z-index: 1;
}

.saleInfo_SaleBg {
    width: 120%;
    height: 240rpx;
    position: absolute;
    top: -20rpx;
    left: -10%;
    z-index: 9;
    filter: blur(12rpx);
}

.containers {
    width: 94%;
    height: 170rpx;
    top: 15rpx;
    left: 3%;
    position: relative;
    z-index: 50;
    color: #fff;
}

.saleAvator {
    width: 120rpx;
    height: 120rpx;
    border-radius: 10rpx;
}

.sale_notices {
    width: 90%;
    height: 35rpx;
    line-height: 35rpx;
    overflow: hidden;
}

.saleDetailIcon {
    position: absolute;
    right: 5rpx;
    top: 50%;
    font-size: 40rpx;
}

.warp {
    width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    letter-spacing: 2rpx;
}

.swiper {
    width: 100%;
    height: 100%;
    letter-spacing: 3rpx;
}

.sale_time {
    width: 90%;
    margin: 20rpx auto 0rpx;
}

.itemList {
    width: 100%;
    display: flex;
    height: 100%;
    justify-content: space-between;
}

.slider_container {
    width: 100%;
    display: flex;
    justify-content: space-between;
    position: fixed;
    bottom: 0rpx;
    z-index: 990;
    transition: all 0.3s;
    background-color: #fff;
}

.classContainer {
    height: 80rpx;
    margin: 0 auto;
}

.newIcon {
    width: 35rpx;
    height: 35rpx;
    background-color: #FFD050;
    color: #fff;
    font-size: 26rpx;
    border-radius: 5rpx;
}

.item {
    height: 80rpx;
    line-height: 80rpx;
    padding: 0;
    font-size: 34rpx;
}

.shopCar {
    position: absolute;
}

.bottom {
    position: absolute;
}

.addBorderTop {
    border-top: 1rpx solid #f4f4f4;
    padding: 20rpx;
    height: 100%;
    box-sizing: border-box;
    width: 100%;
    position: fixed;
    bottom: 0;
    z-index: 99999;
    background-color: #fff;
}

.Distribution_Info {
    font-size: 36rpx;
    font-weight: bold;
    line-height: 80rpx;
}

.activeName {
    width: 120rpx;
    color: #fff;
    text-align: center;
}

.activeDesc {
    width: 550rpx;
    margin-left: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.sceneContainer {
    width: 100%;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.sceneImg {
    width: 24%;
    height: 170rpx;
    margin: 10rpx;
}

.models {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    overflow: hidden;
    background: #2A2B2B;
    z-index: 999999;
}

.merchant_name {
    color: #fff;
    font-size: 34rpx;
    text-align: center;
    margin-top: 60rpx;
    letter-spacing: 4rpx;
    font-weight: 500;
}

.title_container {
    width: 100%;
    margin-top: 30rpx;
    font-size: 30rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.title {
    padding: 5rpx 20rpx;
    border-radius: 40rpx;
    border: 1rpx solid #fff;
    box-sizing: border-box;
    letter-spacing: 3rpx;
}

.discount_container {
    width: 90%;
    margin: 20rpx auto 0rpx;
    padding: 20rpx 0rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #fff;
}

.models-scroll {
    width: 100%;
    height: 90%;
}

.close_circle {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    border: 1rpx solid #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 30rpx auto;
}

.none-count {
    color: gray;
    font-size: 26rpx;
    text-align: right;
    display: block;
}