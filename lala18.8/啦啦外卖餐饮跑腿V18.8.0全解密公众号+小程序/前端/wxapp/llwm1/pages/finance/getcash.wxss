page {
    font-size: 14px;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    background-color: #F5F5F5;
}

.content {
    overflow-x: hidden;
    overflow-y: auto;
}

.content .zan-panel {
    margin-bottom: 10px;
}

.content .zan-cell__bd text {
    color: #33aafc;
}

.content .takeout-list {
    padding: 0 15px;
    background-color: #fff;
}

.content .takeout-list .body {
    padding: 15px 0;
    overflow: hidden;
}

.content .takeout-list .takeout-item-left {
    font-size: 14px;
    float: left;
    line-height: 21px;
}

.content .takeout-list .takeout-item-right {
    float: left;
    width: 100%;
}

.content .takeout-list .takeout-item-right .takeout-item-input input {
    background: none;
    border: 1px solid #e7e7e7;
    border-radius: 3px;
    font-size: 14px;
    padding: 1px 0 1px 6px;
    margin: 6px 0 10px;
    height: 30px;
}

.content .takeout-list .takeout-item-right .takeout-rule:before {
    content: "";
    width: 4px;
    height: 4px;
    border-radius: 50%;
    position: absolute;
    left: 0;
    background: #ccc;
    top: 7px;
}

.content .takeout-list .takeout-item-right .takeout-rule {
    color: #999;
    position: relative;
    padding-left: 8px;
    font-size: 14px;
}

.content .weui-btn[type=default] {
    border: 1px solid #ddd;
}